<project name="SIDL" default="candc" basedir=".">
	<description>
     SIDL
	</description>

	<property name="projectname" value="SIDL" />
	<!-- Important directories -->
	<property name="src" value="javasrc" />
	<property name="build" value="build" />
	<!-- The lib-Project to be checken out -->
		
	<!-- Class folders of subprojects-->
	
	<path id="libs">
		<pathelement path="jpl.jar" />
	</path>

	<path id="bin">
		<path refid="libs" />
		<pathelement location="${build}" />
	</path>

	<!-- clean and compile -->
	<target name="candc" depends="clean, compile" />

	<target name="clean" description="clean up">
		<!-- Clean up -->
		<delete dir="${build}" />
		<!-- Create the build and dist directories -->
		<mkdir dir="${build}" />
	</target>
	
	<target name="compile" description="compile the source code">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}">
			<compilerarg value="-Xlint" />
			<classpath refid="libs" />
		</javac>
		<copy todir="${build}">
		  <fileset dir="${src}">
		    <include name="**/*.pl"/>
		  </fileset>
	    </copy>
	</target>
	
	
</project>